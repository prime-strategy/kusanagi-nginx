#!/bin/bash

export DOCKER_CLI_EXPERIMENTAL=enabled
export DOCKER_BUILDKIT=1
if [ "$DOCKERFILE_PATH" = "" ]; then
    DOCKERFILE_PATH_ARG=""
else
    DOCKERFILE_PATH_ARG="-f $DOCKERFILE_PATH"
fi

docker buildx create \
    --name builder \
    --driver docker-container \
    --platform linux/amd64,linux/i386,linux/arm64,linux/arm/v6,linux/arm/v7,linux/ppc64le,linux/s390x \
    --use
docker buildx inspect --bootstrap
docker buildx build \
    --platform linux/i386,linux/arm64,linux/arm/v6,linux/arm/v7,linux/ppc64le,linux/s390x \
    --progress plain \
    $DOCKERFILE_PATH_ARG \
    -t $IMAGE_NAME \
    --push . 
docker build $DOCKERFILE_PATH_ARG -t $IMAGE_NAME .
